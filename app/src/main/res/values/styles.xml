<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>


    <style name="animate_dialog">
        <item name="android:windowEnterAnimation">@anim/enter_translate_dialog</item>
        <item name="android:windowExitAnimation">@anim/exit_translate_dialog</item>
    </style>

    <style name="animate_dialog_scale">
        <item name="android:windowEnterAnimation">@anim/enter_scale_dialog</item>
        <item name="android:windowExitAnimation">@anim/exit_scale_dialog</item>
    </style>

    <style name="MyProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/T_coupons</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

</resources>
