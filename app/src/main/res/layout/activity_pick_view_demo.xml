        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:onClick="onViewClicked"
            android:id="@+id/btn_Time"
            android:layout_margin="10dp"
            android:text="时间选择器"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <Button
            android:onClick="onViewClicked"
